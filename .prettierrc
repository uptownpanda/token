{
    "overrides": [
        {
            "files": "*.sol",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "bracketSpacing": true,
                "explicitTypes": "always"
            }
        },
        {
            "files": "*.js",
            "options": {
                "printWidth": 120,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": true,
                "bracketSpacing": true,
                "arrowParens": "always",
                "endOfLine": "lf",
                "semi": true,
                "trailingComma": "es5"
            }
        }
    ]
}
